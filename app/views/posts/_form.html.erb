<%= form_with(model: post, local: false) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input type="hidden" name="_method" id="form-method" value=""/>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title">Post</h3>
  </div>

  <div class="modal-body">
    <div class="form-group row">
      <%= form.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :title, id: :post_title, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :body, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_area :body, id: :post_body, class: "form-control", required: true%>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Save</button>
  </div>
<% end %>
