<%= render "devise/shared/error_messages", resource: devise_resource %>
<div class="col-lg-6 mx-auto">
  <p id="notice"><%= notice %></p>
  <div class="card">
    <br>
    <div class="text-center mx-auto">
      <h2>Log In</h2>
    </div>
    <div class="card-body">
      <%= form_for(devise_resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        </div>
      <% end %>
      <div class="text-center"> 
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
